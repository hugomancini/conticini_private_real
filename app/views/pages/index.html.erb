<% @products.each do |product| %>
	<h1><%= product.title %></h1>
	<p><%= product.body_html %></p>
	<p>Sold by : <strong><%= product.vendor %></strong></p>
	<% product.images.each do |image| %>
		<img src="<%= image.src %>" alt="">
	<% end %>
<% end %>

